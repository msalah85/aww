<div id="say" class="say-main-block mrg-btm">
    <div class="container">
        <div class="section">
            <h3 class="section-heading-rgt">@DefaultResource.Labelsection2h1<span>@DefaultResource.Labelsection2h2</span></h3>
        </div>
        <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
            <!-- Wrapper for slides -->
            <div class="carousel-inner">
                <div class="item active">
                    <div class="holder col-sm-5">
                        <img class="img-responsive" src="~/Content/images/products/lb1.jpg" alt="...">
                    </div>
                    <div class="col-sm-6">
                        <div class="carousel-caption">
                 
                            <p>@DefaultResource.Labelsection2p</p>
                      
                        </div>
                    </div>
                </div>
                <div class="item">
                    <div class="holder col-sm-5">
                        <img class="img-responsive" src="~/Content/images/products/lb2.jpg" alt="...">
                    </div>
                    <div class="col-sm-6">
                        <div class="carousel-caption">
                         
                            <p>@DefaultResource.Labelsection2p</p>
                       
                        </div>
                    </div>
                </div>
                <div class="item">
                    <div class="holder col-sm-5">
                        <img class="img-responsive" src="~/Content/images/products/lb10.jpg" alt="...">
                    </div>
                    <div class="col-sm-6">
                        <div class="carousel-caption">
                       
                            <p>@DefaultResource.Labelsection2p</p>
                          
                        </div>
                    </div>
                </div>
            </div>
            <div class="controllers col-sm-8 col-xs-12">
               
                <!-- Indicators -->
                <ol class="carousel-indicators">
                    <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
                    <li data-target="#carousel-example-generic" data-slide-to="1"></li>
                    <li data-target="#carousel-example-generic" data-slide-to="2"></li>
                </ol>
            </div>
        </div>
    </div>
</div>

