@using AWW.Resources
@{
    var culture = System.Threading.Thread.CurrentThread.CurrentUICulture.Name.ToLowerInvariant();
}
<div class="preloader">
    <div class="status">
        <div class="status-message">
            <h1>Arabian Wet Wipes</h1>
        </div>
    </div>
</div>
<nav id="headermenu" class="navbar navbar-default ">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="logo" href="@Url.Action("Index", "Home")"><img src="~/Content/images/logo.png" alt="logo"></a>
        </div>
        <div class="collapse navbar-collapse navbar-right" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav" id="main-menu">
                <li><a href="@Url.Action("Index", "Home")">@DefaultResource.Homelabel <span class="sr-only">(current)</span></a></li>
                <li><a href="@Url.Action("About", "Home")">@DefaultResource.AboutUslabel</a></li>
                <li><a href="@Url.Action("Index", "Products")">@DefaultResource.Productslabel</a></li>
                <li><a href="@Url.Action("Index", "Label")">@DefaultResource.Labellabel</a></li>
                <li><a href="@Url.Action("Index", "News")">@DefaultResource.Newslabel</a></li>
                <li><a href="@Url.Action("Contact", "Home")">@DefaultResource.ContactUslabel</a></li>
            </ul>
            <span class="pull-right lang-btn">
                @if (culture == "en-us")
                {
                    <a href="@Url.Action("SetCulture", "Common", new { @culture = "ar" })">عربى</a>
                }
                else
                {
                    <a href="@Url.Action("SetCulture", "Common", new { @culture = "en-us" })">E</a>
                }
            </span>
        </div><!-- navbar-collapse -->
    </div><!-- container -->
</nav><!--  end navigation -->
