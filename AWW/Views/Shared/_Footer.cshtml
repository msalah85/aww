@{
    var culture = System.Threading.Thread.CurrentThread.CurrentUICulture.Name.ToLowerInvariant();
}


<!-- footer -->
<div id="footer-section" class="footer-main-block">
    <div class="container">
        <div class="footer-block text-center">
            <h2 class="middle-heading">Have a <span>question ?</span></h2>
            <a href="index.html#" class="contact-btn" data-toggle="modal" data-target="#contactModal">Contact Us <i class="fa fa-long-arrow-right"></i></a>
            <div class="modal fade contact-modal" id="contactModal" tabindex="-1" role="dialog" aria-labelledby="contactModal">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                            <h6>Contact Us</h6>
                        </div>
                        <div class="modal-body">
                            <div class="form-group">
                                <input type="email" class="form-control" id="email-contact" placeholder="E-mail">
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" id="subject-contact" placeholder="Subject">
                            </div>
                            <div class="form-group">
                                <textarea placeholder="  Message" rows="4" cols="68"></textarea>
                            </div>
                            <button type="button" class="btn btn-default">Send</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <hr>
    <div class="container">
        <div class="row copyright-block">
            <div class="col-md-3 col-xs-6">
                <div class="copyright">
                    <div class="footer-logo">
                        <img src="~/Content/images/logo-footer.png" class="img-responsive" alt="logo">
                    </div>
                

                    @if (culture == "en-us")
                    {
                        <p>Copyright © 2017 All rights reserved.</p>
                    }
                    else
                    {
                        <p> حقوق النشر © 2017 كل الحقوق محفوظه. </p>
                    }
                </div>
            </div>
            <div class="col-md-6 hidden-xs hidden-sm">
                <div class="footer-menu text-center">
                    <ul>
                        <li><a href="index.html">Home</a></li>
                        <li><a href="services.html">AboutUs</a></li>
                        <li><a href="portfolio.html">Products</a></li>
                        <li><a href="blog.html">Label</a></li>
                        <li><a href="blog.html">News</a></li>
                        <li><a href="contact.html">Contact</a></li>
                    </ul>
                </div>
            </div>
            <div class="col-md-3 col-xs-6">
                <div class="footer-social">
                    <ul>
                        <li><a href="index.html#" target="_blank"><i class="fa fa-facebook"></i></a></li>
                        <li><a href="index.html#" target="_blank"><i class="fa fa-twitter"></i></a></li>
                        <li><a href="index.html#" target="_blank"><i class="fa fa-instagram"></i></a></li>
                        <li><a href="index.html#" target="_blank"><i class="fa fa-dribbble"></i></a></li>
                        <li><a href="index.html#" target="_blank"><i class="fa fa-linkedin"></i></a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- end footer -->