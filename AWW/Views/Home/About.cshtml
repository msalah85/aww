
@{
    ViewBag.Title = "About";
}

<!-- breadcrumb -->
<div class="container">
    <ol class="breadcrumb">
        <li><a href="@Url.Action("Index", "Home")">Home</a></li>
        <li class="active"><a href="@Url.Action("About", "Home")">About Us</a></li>
    </ol>
</div>
<!-- end breadcrumb -->
<!--  about -->
<div id="about" class="about-main-block mrg-btm">
    <div class="container">
        <div class="section">
            <h3 class="section-heading">Our <span>Story</span></h3>
        </div>
        <div class="row">
            <div class="col-xs-offset-1 col-sm-7 col-md-5">
                <div class="about-block">
                    <h2 class="middle-heading">We are the <span>leaders</span></h2>
                    <p>We are a team of young and enthusiastic designers and developers who developed Layers WP Style Kit, WP Themes, Layers WP Child Theme, Bootstrap Themes, WP Themes, Opencart Themes, Joomla Themes and PSD Templates. Our mission is to build user–friendly, clean and modern designs in order to help more and more users improve their livelihood. To us, customer is king.</p>
                </div>
                <div class="about-facts">
                    <div class="row">
                        <div class="col-xs-4 col-md-5">
                            <h2 class="counter">318</h2>
                            <p>Clients</p>
                        </div>
                        <div class="col-xs-4 col-md-5">
                            <h2 class="counter">4021</h2>
                            <p>Members</p>
                        </div>
                        <div class="col-xs-2 col-md-2">
                            <h2 class="counter">28</h2>
                            <p>Awards</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-offset-2 col-sm-4 col-md-4">
                <div class="about-dtl-img img-top">
                    <img src="~/Content/images/about-image.jpg" class="img-responsive" alt="about">
                </div>
            </div>
        </div>
    </div>
</div>
<!--  end about -->

