
@{
    ViewBag.Title = "Contact";
}

<!-- breadcrumb -->
<div class="container">
    <ol class="breadcrumb">
        @*<li><a href="index.html">Home</a></li>
        <li class="active"><a href="contact.html">Contact</a></li>*@
    </ol>
</div>
<!-- end breadcrumb -->
<!-- contact -->
<div id="contact-page" class="contact-main-block mrg-btm">
    <div class="container">
        <div class="section">
            <h3 class="section-heading">Contact <span>Us</span></h3>
        </div>
        <div class="row">
            <div class="contact-dtl">
                <div class="col-xs-offset-1 col-md-11">
                    <h2 class="middle-heading">Contact-details</h2>
                </div>
                <div class="col-xs-offset-1 col-md-4">
                    <div class="contact-icon"><i class="fa fa-map-marker"></i></div>
                    <h6 class="contact-heading">Address</h6>
                    <p>P.O. Box: 8480 - SAIF ZONE<br />Sharjah - U A E</p>
                </div>
                <div class="col-xs-offset-1 col-md-offset-0 col-md-4">
                    <div class="contact-icon"><i class="fa fa-envelope"></i></div>
                    <h6 class="contact-heading">Email</h6>
                    <p>Email: <a href="mailto: awwiq@ymail.com" class="__cf_email__" >awwiq@ymail.com</a> <br />Web: www.awwiq.com</p>
                </div>
                <div class="col-xs-offset-1 col-md-offset-0 col-md-3">
                    <div class="contact-icon"><i class="fa fa-phone-square"></i></div>
                    <h6 class="contact-heading">Phone</h6>
                    <p>Phone:<a href="tel: +971 6 5570171"> +971 6 5570171</a> <br />Fax: +971 6 5570171</p>
                </div>
            </div>
        </div>
        <div class="row quote-row">
            <div class="contact-form">
                <div class="col-xs-offset-1 col-md-11">
                    <h2 class="middle-heading">Get in touch</h2>
                </div>
                <div class="col-xs-offset-1 col-md-4">
                    <div class="form-group">
                        <input type="text" class="form-control" id="Name" placeholder="Enter your name...">
                    </div>
                </div>
                <div class="col-xs-offset-1 col-md-offset-0 col-md-4">
                    <div class="form-group">
                        <input type="email" class="form-control" id="Email" placeholder="youremail@email.com">
                    </div>
                </div>
                <div class="col-xs-offset-1 col-md-offset-0 col-md-3">
                    <div class="form-group">
                        <input type="text" class="form-control" id="Subject" placeholder="Subject (Optional)">
                    </div>
                </div>
                <div class="col-xs-offset-1 col-md-11">
                    <div class="form-group">
                        <textarea placeholder="Product detail" id="Message" rows="8"></textarea>
                    </div>
                </div>
                <div class="col-xs-offset-1 col-md-11 quote-btn">
                    <button type="submit" class="btn btn-default">Submit</button>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- end contact -->
